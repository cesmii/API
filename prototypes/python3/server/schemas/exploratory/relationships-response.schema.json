 {
     "_comment": "RFC 4.1.7",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/cesmii/API/blob/prototypes/prototypes/python3/server/schemas/exploratory/relationships-response.schema.json",
    "title": "Relationships",
    "type": "array",
    "description": "Response schema for relationships endpoint",
    "items": {
        "type": "object",
        "properties": {
            "subject": {
                "type": "string",
                "description": "The element ID that the relationship originates from (from URL path)"
            },
            "relationshipType": {
                "type": "string",
                "description": "The type of relationship from subject's perspective"
            },
            "relationshipTypeInverse": {
                "type": "string",
                "description": "The inverse relationship type from object's perspective"
            },
            "objectInstance": {
                "description": "The object that the subject relates to",
                "$ref": "https://github.com/cesmii/API/blob/prototypes/prototypes/python3/server/schemas/exploratory/instances-response.schema.json"
            }
        },
        "required": [ "subject", "relationshipType", "objectInstance" ]
    }
}
