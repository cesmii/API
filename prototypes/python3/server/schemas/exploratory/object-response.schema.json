{
    "_comment": "RFC 4.1.8",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/cesmii/API/blob/prototypes/prototypes/python3/server/schemas/exploratory/object-response.schema.json",
    "title": "Object",
    "description": "Response schema for the object endpoint",
    "type": "object",
    "properties": {
        "instanceObject": {
            "description": "The object that the subject relates to",
            "$ref": "https://github.com/cesmii/API/blob/prototypes/prototypes/python3/server/schemas/exploratory/instances-response.schema.json"
        },
        "attributes": {
            "type": "object",
            "description": "Optional property 3.1.2: Additional information about how an object attribute is stored or treated by the underlying platform.",
            "properties": {
                "serialNumber": {
                    "type": "string"
                },
                "model": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "temperature": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "string"
                        },
                        "engUnit": {
                            "type": ["string", "null"],
                            "description": "A string indicating the engineering unit for measuring the element value. Where present, the definitions found in UNECE Recommendation Number 20 MUST be used."
                        }
                    }
                },
                "powerConsumption": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "string",
                            "description": ""
                        },
                        "engUnit": {
                            "type": "string",
                            "description": ""
                        }
                    }
                }
            }
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [ "instanceObject" ]
}
