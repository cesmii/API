{
    "_comment": "RFC 4.2.1.2",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/cesmii/API/blob/prototypes/prototypes/python3/server/schemas/updates/last-known-value-update-request.schema.json",
    "title": "Last Known Value Update Request",
    "description": "Request schema for updating last known value",
    "oneOf": [
        {
            "description": "Single ElementId update",
            "$ref": "#/$defs/valueUpdate"
        },
        {
            "description": "Multiple ElementIds update - array of updates",
            "type": "array",
            "items": {
                "$ref": "#/$defs/valueUpdate"
            }
        }
    ],
    "$defs": {
        "valueUpdate": {
            "type": "object",
            "properties": {
                "elementId": {
                    "type": "string",
                    "description": "ElementId of the object to update"
                },
                "value": {
                    "description": "New current value to record in CMIP"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Optional timestamp for the update"
                }
            },
            "required": ["elementId", "value"]
        }
    }
}
