{
    "_comment": "RFC 4.2.1.1",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/cesmii/API/blob/prototypes/prototypes/python3/server/schemas/values/last-known-value-response.schema.json",
    "title": "Last Known Value Response",
    "description": "A schema for the last known value response",
    "oneOf": [
        {
            "$ref": "#/$defs/value",
            "description": "Single ElementId response - single value object"
        },
        {
            "description": "Multiple ElementIds response - array of value objects",
            "type": "array",
            "items": {
                "$ref": "#/$defs/value"
            }
        }
    ],
    "$defs": {
        "value": {
            "type": "object",
            "properties": {
                "elementId": {
                    "type": "string",
                    "description": "A unique string identifier for the element"
                },
                "value": {
                    "description": "The current value - can be any type depending on the object/attribute"
                },
                "dataType": {
                    "type": ["string", "null"],
                    "description": "Most-derived Type name or JavaScript primitive datatype"
                },
                "timestamp": {
                    "type": ["string", "null"],
                    "format": "date-time",
                    "description": "Timestamp following RFC 3339 standard"
                },
                "objectMetadata": {
                    "$ref": "https://github.com/cesmii/API/blob/prototypes/prototypes/python3/server/schemas/object-meta-data.schema.json",
                    "description": "Required metadata per section 3.1.1, optional metadata per 3.1.2 based on query parameters"
                }
            },
            "required": ["elementId", "dataType", "timestamp", "objectMetadata"]
        }
    }
}
