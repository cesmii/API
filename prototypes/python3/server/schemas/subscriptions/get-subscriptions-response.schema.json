{
    "_comment": "GET /subscriptions response",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/cesmii/API/blob/prototypes/prototypes/python3/server/schemas/subscriptions/get-subscriptions-response.schema.json",
    "title": "Get Subscriptions Response",
    "description": "Response schema for GET /subscriptions endpoint",
    "type": "object",
    "properties": {
        "subscriptionIds": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "subscriptionId": {
                        "type": "integer",
                        "description": "Unique subscription identifier"
                    },
                    "qos": {
                        "type": "string",
                        "enum": ["QoS0", "QoS2"],
                        "description": "Quality of Service level"
                    },
                    "created": {
                        "type": "string",
                        "format": "date-time",
                        "description": "ISO 8601 timestamp when subscription was created"
                    }
                },
                "required": ["subscriptionId", "qos", "created"]
            },
            "description": "Array of subscription summaries"
        }
    },
    "required": ["subscriptionIds"]
}
